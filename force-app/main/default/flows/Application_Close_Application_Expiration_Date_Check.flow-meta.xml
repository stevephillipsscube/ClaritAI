    <decisions>
        <name>Evaluate_Expiration_Date</name>
        <label>Evaluate Expiration Date</label>
        <locationX>314</locationX>
        <locationY>468</locationY>
        <defaultConnectorLabel>Other - Do Nothing</defaultConnectorLabel>
        <rules>
            <name>Expires_in_One_Month</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Expiration_Date__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>OneMonthFromNow</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Email_Subflow_30_Day_Notice</targetReference>
            </connector>
            <label>Expires in One Month</label>
        </rules>
        <rules>
            <name>Expires_Today</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Expiration_Date__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Today</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Application_to_Closed</targetReference>
            </connector>
            <label>Expires Today</label>
        </rules>
    </decisions>
    <decisions>
        <name>Expiration_Date_is_set</name>
        <label>Expiration Date is set</label>
        <locationX>578</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_5_Months_Old</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Expiration_Date__c</leftValueReference>
                <operator>WasSet</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Current_Milestone</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>JRS - updating to include Sufficiency Check</description>
    <environments>Default</environments>
    <formulas>
        <name>FiveMonthsAgo</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR(TODAY()) - IF(MONTH(TODAY()) &gt; 5, 0, 1),
    MOD(MONTH(TODAY()) - 5 + 12, 12),
    DAY(TODAY())
)</expression>
    </formulas>
    <formulas>
        <name>MilestoneCreateDateAsDate</name>
        <dataType>Date</dataType>
        <expression>DATEVALUE({!Get_Current_Milestone.CreatedDate})</expression>
    </formulas>
    <formulas>
        <name>OneMonthFromNow</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR(TODAY()) + IF(MONTH(TODAY()) = 12, 1, 0),
    MOD(MONTH(TODAY()) + 1, 12),
    DAY(TODAY())
)</expression>
    </formulas>
    <formulas>
        <name>SixMonthsAgo</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR(TODAY()) - IF(MONTH(TODAY()) &gt; 6, 0, 1),
    MOD(MONTH(TODAY()) - 6 + 12, 12),
    DAY(TODAY())
)</expression>
    </formulas>
    <formulas>
        <name>TestDate</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR(TODAY()),
    MONTH(TODAY()),
    DAY(TODAY() -1)
)</expression>
    </formulas>
    <formulas>
        <name>Today</name>
        <dataType>Date</dataType>
        <expression>TODAY()</expression>
    </formulas>
