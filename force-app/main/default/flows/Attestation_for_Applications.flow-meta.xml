    <formulas>
        <name>Acknowledgement_Formula</name>
        <dataType>Boolean</dataType>
        <expression>

if({!Header_Record_Type_Name} = &quot;Pre-Application Conference&quot;,{!Acknowledgement_Checkbox_Pre_App},    {!Acknowledgement_Checkbox})</expression>
    </formulas>
    <formulas>
        <name>Header_Formula</name>
        <dataType>String</dataType>
        <expression>IF(AND(
NOT(BEGINS({!Record_Type_Name}, &quot;Pre_Application&quot;)),
CONTAINS({!Header_Record_Type_Name} , &quot;Application&quot;)), 
TRIM(SUBSTITUTE({!Header_Record_Type_Name}, &apos;Application&apos;, &quot;&quot;)),
{!Header_Record_Type_Name})</expression>
    </formulas>
    <formulas>
