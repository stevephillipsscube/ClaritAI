    <decisions>
        <name>Pending_Submissions_or_Outstanding_Balance_Decision</name>
        <label>Pending Submissions or Outstanding Balance Decision</label>
        <locationX>512</locationX>
        <locationY>539</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>In_Application_Status_All_Fees_and_Submission_Satisfied</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>permit.MUSW__Phase__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Application</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>permit.MUSW__Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Pending_Submissions</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>permit.MUSW__Total_Balance__c</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>0.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Record_type_assignment</targetReference>
            </connector>
            <label>In Application Status, All Fees and Submission Satisfied</label>
        </rules>
        <rules>
            <name>Revisions_Required_no_pending_submissions</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>permit.MUSW__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Resubmission Required</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Pending_Submissions</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Status_Value_to_Be_Resubmissions_Received</targetReference>
            </connector>
            <label>Revisions Required -&gt; no pending submissions</label>
        </rules>
    </decisions>
    <decisions>
        <description>Create a sufficiency check, but DO NOT advance to Review yet.</description>
        <name>Sufficiency_Check</name>
        <label>Sufficiency_Check</label>
        <locationX>182</locationX>
        <locationY>755</locationY>
        <defaultConnector>
            <targetReference>Assign_Permit_Status_to_Completed</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Sufficiency_Check_Required</name>
            <conditionLogic>1 OR 2 OR 3 OR (4 AND 5)</conditionLogic>
            <conditions>
                <leftValueReference>Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Driveway_Permit</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Land Disturbance Permit</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Floodplain Permit</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Trade Permit</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.MUSW__Permit2__r.MUSW__Use_Class__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Commercial</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Copy_1_of_Assign_Permit_Status_to_Completed</targetReference>
            </connector>
            <label>Sufficiency Check Required</label>
        </rules>
    </decisions>
