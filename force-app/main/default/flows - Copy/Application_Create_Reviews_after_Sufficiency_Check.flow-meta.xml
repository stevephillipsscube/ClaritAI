    <formulas>
        <name>Additional_Review_Due_Date</name>
        <dataType>Date</dataType>
        <expression>Today () + {!Previous_Review_Template.MUSW__Due_in_Days__c}</expression>
    </formulas>
    <formulas>
        <description>This is take the previous Review Template Name and append &quot;Additional&quot; to find the template for Resubmittal Reviews (because they have different due dates)</description>
        <name>Additional_Review_Template_Name</name>
        <dataType>String</dataType>
        <expression>{!Review_Template_Name} + &quot;-Additional Reviews&quot;</expression>
    </formulas>
    <formulas>
        <name>Current_Date</name>
        <dataType>Date</dataType>
        <expression>Today ()</expression>
    </formulas>
    <formulas>
        <name>New_Date_Holidays</name>
        <dataType>Date</dataType>
        <expression>CASE(
MOD({!New_Review.MUSW__Due_Date__c} - DATE(1900, 1, 7), 7),
0, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ FLOOR(({!Counter}-1)/5)*2,
1, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ FLOOR(({!Counter})/5)*2,
2, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ FLOOR(({!Counter}+1)/5)*2,
3, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ FLOOR(({!Counter}+2)/5)*2,
4, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ FLOOR(({!Counter}+3)/5)*2,
5, ({!New_Review.MUSW__Due_Date__c}) + {!Counter}+ CEILING(({!Counter})/5)*2,
6, ({!New_Review.MUSW__Due_Date__c}) - IF({!Counter}&gt;0,1,0) + {!Counter}+ CEILING(({!Counter})/5)*2,
null)</expression>
    </formulas>
    <formulas>
        <name>Review_Due_Date</name>
        <dataType>Date</dataType>
        <expression>Today () + {!Loop_Through_Pervious_Reviews.MUSW__Review_Template__r.MUSW__Due_in_Days__c}</expression>
    </formulas>
    <formulas>
        <name>Review_Due_Date_Business_Days</name>
        <dataType>Date</dataType>
        <expression>CASE(
MOD(TODAY() - DATE(1900, 1, 7), 7),
0, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ FLOOR(({!Previous_Review_Template.Re_Review_Number_of_Days__c}-1)/5)*2,
1, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ FLOOR(({!Previous_Review_Template.Re_Review_Number_of_Days__c})/5)*2,
2, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ FLOOR(({!Previous_Review_Template.Re_Review_Number_of_Days__c}+1)/5)*2,
3, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ FLOOR(({!Previous_Review_Template.Re_Review_Number_of_Days__c}+2)/5)*2,
4, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ FLOOR(({!Previous_Review_Template.Re_Review_Number_of_Days__c}+3)/5)*2,
5, (TODAY()) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ CEILING(({!Previous_Review_Template.Re_Review_Number_of_Days__c})/5)*2,
6, (TODAY()) - IF({!Previous_Review_Template.Re_Review_Number_of_Days__c}&gt;0,1,0) + {!Previous_Review_Template.Re_Review_Number_of_Days__c}+ CEILING(({!Previous_Review_Template.Re_Review_Number_of_Days__c})/5)*2,
null)</expression>
    </formulas>
